                        <field name="zip" placeholder="ZIP" style="width: 48%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="city" placeholder="Otra referencia" style="width: 48%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                    </div>
                                   
				</div>
			</field>
		</record>
	</data>
